<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Boomalope" or defName="Boomrat"]/race</xpath>
        <value>
            <mateMtbHours>72</mateMtbHours>
            <gestationPeriodDays>30</gestationPeriodDays>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Boomalope" or defName="Boomrat"]/litterSizeCurve</xpath>
        <value>
            <litterSizeCurve>
                <points>
                    <li>(0.5, 0)</li>
                    <li>(1, 1)</li>
                    <li>(1.01, 0.02)</li>
                    <li>(3.5, 0)</li>
                </points>
            </litterSizeCurve>
        </value>
    </Operation>

</Patch>